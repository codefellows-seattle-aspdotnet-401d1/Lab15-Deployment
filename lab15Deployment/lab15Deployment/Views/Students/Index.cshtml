@*@model IEnumerable<lab15Deployment.Models.Students>*@
@model lab15Deployment.ViewModel.CoursesViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
<head>
    <meta charset="utf-8" />
    <title>Students List</title>
    <link rel="stylesheet" href="~/StyleSheet.css">
    <link href="https://fonts.googleapis.com/css?family=Artifika" rel="stylesheet">
</head>
<h2>List Of Registered Students</h2>

<p>
    <a class="btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-controller="Students" asp-action="Index">
    <h3>
        Name: <input type="text" name="searchString" />
        <input type="submit" value="Search" class="button" />
    </h3>
</form>

<form>
    <p>
        <select asp-for="studentCourses" asp-items="Model.courses">
            <option value="">ALL</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].Course)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].Birthday)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.students) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="div">
    <a class="btn-primary" href="/">Back to Home</a>
</div>