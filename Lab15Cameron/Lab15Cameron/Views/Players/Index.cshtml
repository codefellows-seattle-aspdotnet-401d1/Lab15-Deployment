@model Lab15Cameron.ViewModel.PlayerTeamViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Hoop Stars</h2>

<form asp-controller="Players" asp-action="index">
    <p>
        <select asp-for="playerCity" asp-items="Model.teamCity">
            <option value="">ALL</option>
        </select>

        <input type="submit" value="Filter" />
    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ballPlayer[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ballPlayer[0].Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ballPlayer[0].Team)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ballPlayer[0].Position)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ballPlayer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
