@model Lab15Deployment.ViewModel.PowerClassViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Register" asp-action="index" method="get">
    <p>
        <select asp-for="mutantClass" asp-items="Model.powerClasses">
            <option value="">ALL</option>
        </select>

        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.mutants[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mutants[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mutants[0].Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mutants[0].Alias)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mutants[0].Mutation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mutants[0].Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mutants[0].PowerClass)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.mutants) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mutation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PowerClass)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
